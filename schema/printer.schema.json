{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openprint3d.org/schema/printer.schema.json",
  "title": "OpenPrint3D Printer Profile",
  "description": "Schema for OpenPrint3D printer profiles (geometry, capabilities, firmware, etc.).",
  "type": "object",
  "required": [
    "op3d_schema",
    "op3d_schema_version",
    "id",
    "maintainer",
    "manufacturer",
    "model",
    "build_volume",
    "kinematics",
    "axes",
    "extruders",
    "firmware"
  ],
  "default": {
    "variant": "Stock",
    "build_volume": { "shape": "rectangular", "origin": "front_left" },
    "network": { "has_wifi": false, "has_ethernet": false, "supports_lan_api": false },
    "chamber": { "heated": false, "passive": false }
  },
  "properties": {
    "op3d_schema": {
      "type": "string",
      "const": "printer",
      "description": "Discriminator for this schema type."
    },
    "op3d_schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version of the printer schema, e.g. 0.1.0."
    },
    "id": {
      "type": "string",
      "pattern": "^[A-Za-z0-9]+/[A-Za-z0-9-_.]+$",
      "description": "Stable identifier in format 'Brand/Model', e.g. 'BambuLab/X1-Carbon'."
    },
    "maintainer": {
      "type": "object",
      "required": ["name", "maintainer_type"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "maintainer_type": {
          "type": "string",
          "enum": ["company", "community", "personal"],
          "default": "community"
        },
        "website": { "type": "string", "format": "uri" },
        "contact": { "type": "string" }
      },
      "additionalProperties": false
    },
    "manufacturer": {
      "type": "string",
      "minLength": 1,
      "description": "Manufacturer name, e.g. 'Bambu Lab', 'Creality'."
    },
    "model": {
      "type": "string",
      "minLength": 1,
      "description": "Printer model name, e.g. 'X1-Carbon', 'Ender-3 S1 Pro'."
    },
    "variant": {
      "type": "string",
      "default": "Stock",
      "description": "Optional variant name, e.g. 'Stock', 'DirectDriveMod'."
    },
    "build_volume": {
      "type": "object",
      "required": ["x", "y", "z"],
      "properties": {
        "x": { "type": "number", "minimum": 50, "maximum": 2000 },
        "y": { "type": "number", "minimum": 50, "maximum": 2000 },
        "z": { "type": "number", "minimum": 50, "maximum": 2000 },
        "shape": {
          "type": "string",
          "enum": ["rectangular", "cylindrical"],
          "default": "rectangular"
        },
        "origin": {
          "type": "string",
          "enum": ["center", "front_left"],
          "default": "front_left"
        }
      },
      "additionalProperties": false
    },
    "kinematics": {
      "type": "string",
      "enum": [
        "cartesian",
        "corexy",
        "corexz",
        "delta",
        "hybrid_corexy",
        "scara",
        "bed_slinger",
        "msla",
        "sla",
        "lfs",
        "idex",
        "cross",
        "other"
      ]
    },
    "axes": {
      "type": "object",
      "required": ["x", "y", "z"],
      "properties": {
        "x": {
          "type": "object",
          "properties": {
            "max_speed": { "type": "number", "minimum": 1, "maximum": 1000 },
            "max_accel": { "type": "number", "minimum": 100, "maximum": 50000 }
          }
        },
        "y": {
          "type": "object",
          "properties": {
            "max_speed": { "type": "number", "minimum": 1, "maximum": 1000 },
            "max_accel": { "type": "number", "minimum": 100, "maximum": 50000 }
          }
        },
        "z": {
          "type": "object",
          "properties": {
            "max_speed": { "type": "number", "minimum": 1, "maximum": 100 },
            "max_accel": { "type": "number", "minimum": 50, "maximum": 5000 }
          }
        }
      },
      "additionalProperties": false
    },
    "extruders": {
      "type": "array",
      "minItems": 1,
      "maxItems": 16,
      "items": {
        "type": "object",
        "required": ["id", "nozzle_diameter"],
        "properties": {
          "id": { "type": "string" },
          "nozzle_diameter": { "type": "number", "minimum": 0.01, "maximum": 2.0 },
          "nozzle_material": {
            "type": "string",
            "enum": ["brass", "hardened-steel", "stainless-steel", "other", "n/a"]
          },
          "max_temp": { "type": "number", "minimum": 150, "maximum": 500 },
          "min_temp": { "type": "number", "minimum": 100, "maximum": 300 },
          "retraction_supported": { "type": "boolean", "default": true }
        },
        "additionalProperties": false
      }
    },
    "bed": {
      "type": "object",
      "properties": {
        "heated": { "type": "boolean", "default": true },
        "max_temp": { "type": "number", "minimum": 40, "maximum": 200 },
        "surface_type": { "type": "string" }
      },
      "additionalProperties": false
    },
    "chamber": {
      "type": "object",
      "properties": {
        "heated": { "type": "boolean", "default": false },
        "max_temp": { "type": "number", "minimum": 20, "maximum": 150 },
        "passive": { "type": "boolean", "default": false }
      },
      "additionalProperties": false
    },
    "firmware": {
      "type": "object",
      "required": ["flavor"],
      "properties": {
        "flavor": {
          "type": "string",
          "enum": ["marlin", "klipper", "reprap", "bambu", "proprietary", "prusa", "ideaMaker", "s3g", "other"]
        },
        "identifier": { "type": "string" }
      },
      "additionalProperties": false
    },
    "network": {
      "type": "object",
      "properties": {
        "has_wifi": { "type": "boolean", "default": false },
        "has_ethernet": { "type": "boolean", "default": false },
        "supports_lan_api": { "type": "boolean", "default": false }
      },
      "additionalProperties": false
    },
    "external_ids": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_.-]+$": { "type": "string" }
      }
    },
    "links": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_.-]+$": { "type": "string", "format": "uri" }
      }
    },
    "profile_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Version of this specific profile instance, e.g. '1.0.0'."
    },
    "release": {
      "type": "object",
      "description": "Release information for this profile version.",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Semantic version of this profile release."
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 date of this release."
        },
        "notes": {
          "type": "string",
          "description": "Release notes for this version."
        }
      }
    },
    "license": {
      "type": "string",
      "default": "CC0-1.0"
    },
    "documentation_uri": { "type": "string", "format": "uri" },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "notes": { "type": "string" },
    "x_cura": {
      "type": "object",
      "description": "Cura-specific printer definition overrides"
    },
    "x_prusaslicer": {
      "type": "object",
      "description": "PrusaSlicer-specific printer configuration"
    },
    "x_orca": {
      "type": "object",
      "description": "OrcaSlicer-specific printer configuration"
    },
    "x_bambu": {
      "type": "object",
      "description": "Bambu Studio/Printer-specific configuration"
    }
  },
  "patternProperties": {
    "^x_[a-zA-Z0-9_.-]+$": {
      "type": "object",
      "description": "Vendor- or slicer-specific extensions."
    }
  },
  "additionalProperties": false
}
