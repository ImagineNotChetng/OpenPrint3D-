{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openprint3d.org/schema/filament.schema.json",
  "title": "OpenPrint3D Filament Profile",
  "description": "Schema for OpenPrint3D filament profiles (material, temps, environmental guidance).",
  "type": "object",
  "required": [
    "op3d_schema",
    "op3d_schema_version",
    "id",
    "maintainer",
    "brand",
    "name",
    "material",
    "nozzle",
    "bed"
  ],
  "default": {
    "diameter": 1.75,
    "volumetric_speed": 8,
    "license": "CC0-1.0"
  },
  "properties": {
    "op3d_schema": {
      "type": "string",
      "const": "filament",
      "description": "Discriminator for this schema type."
    },
    "op3d_schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version of the filament schema, e.g. 0.1.0."
    },
    "id": {
      "type": "string",
      "pattern": "^[A-Za-z0-9]+/[A-Za-z0-9-_]+$",
      "description": "Stable identifier in format 'Brand/Name', e.g. 'Hatchbox/PLA'."
    },
    "maintainer": {
      "type": "object",
      "required": ["name", "maintainer_type"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "maintainer_type": {
          "type": "string",
          "enum": ["company", "community", "personal"],
          "default": "community"
        },
        "website": { "type": "string", "format": "uri" },
        "contact": { "type": "string" }
      },
      "additionalProperties": false
    },
    "brand": {
      "type": "string",
      "minLength": 1,
      "description": "Filament brand name, e.g. 'Hatchbox', 'eSUN', 'Polymaker'."
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Product name, e.g. 'PLA 1.75mm', 'PolyLite PETG'."
    },
    "material": {
      "type": "string",
      "enum": [
        "PLA",
        "PETG",
        "ABS",
        "ASA",
        "TPU",
        "TPE",
        "PA6",
        "PA12",
        "PA-CF",
        "PET-CF",
        "PC",
        "PP",
        "PVA",
        "BVOH",
        "HIPS",
        "PVB",
        "PEEK",
        "PEKK",
        "PCTG",
        "CPE",
        "PMMA",
        "CA",
        "Other"
      ],
      "description": "Base material type."
    },
    "variant": {
      "type": "string",
      "description": "Material variant, e.g. 'Silk', 'Matte', 'Carbon Fiber', 'Glow'."
    },
    "color": { "type": "string" },
    "color_variants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "hex"],
        "properties": {
          "name": { "type": "string" },
          "hex": { "type": "string", "pattern": "^[0-9A-Fa-f]{6}$" }
        }
      }
    },
    "profile_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "release": {
      "type": "object",
      "description": "Release information for this profile version.",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Semantic version of this profile release."
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 date of this release."
        },
        "notes": {
          "type": "string",
          "description": "Release notes for this version."
        }
      }
    },
    "license": {
      "type": "string",
      "default": "CC0-1.0"
    },
    "documentation_uri": { "type": "string", "format": "uri" },
    "diameter": {
      "type": "number",
      "default": 1.75,
      "enum": [1.75, 2.85, 3.0],
      "description": "Nominal filament diameter in mm."
    },
    "density": {
      "type": "number",
      "minimum": 0.5,
      "maximum": 2.0,
      "description": "Material density in g/cm³."
    },
    "nozzle": {
      "type": "object",
      "required": ["min", "max"],
      "properties": {
        "min": { "type": "number", "minimum": 150, "maximum": 500 },
        "max": { "type": "number", "minimum": 180, "maximum": 500 },
        "recommended": { "type": "number", "minimum": 150, "maximum": 500 }
      },
      "additionalProperties": false
    },
    "bed": {
      "type": "object",
      "required": ["min", "max"],
      "properties": {
        "min": { "type": "number", "minimum": 20, "maximum": 150 },
        "max": { "type": "number", "minimum": 30, "maximum": 200 },
        "recommended": { "type": "number", "minimum": 20, "maximum": 180 }
      },
      "additionalProperties": false
    },
    "fan": {
      "type": "object",
      "properties": {
        "min": { "type": "number", "minimum": 0, "maximum": 100 },
        "max": { "type": "number", "minimum": 0, "maximum": 100 },
        "recommended": { "type": "number", "minimum": 0, "maximum": 100 }
      },
      "additionalProperties": false
    },
    "drying": {
      "type": "object",
      "properties": {
        "temperature": { "type": "number", "minimum": 40, "maximum": 150 },
        "duration_hours": { "type": "number", "minimum": 1, "maximum": 48 }
      }
    },
    "environment": {
      "type": "object",
      "properties": {
        "sensitive_to_moisture": { "type": "boolean", "default": false },
        "enclosure_recommended": { "type": "boolean", "default": false },
        "max_ambient_temp": { "type": "number", "minimum": 10, "maximum": 50 }
      }
    },
    "volumetric_speed": {
      "type": "number",
      "minimum": 1,
      "maximum": 30,
      "default": 8,
      "description": "Maximum volumetric speed in mm³/s."
    },
    "printing_speed": {
      "type": "object",
      "properties": {
        "min": { "type": "number", "minimum": 5, "maximum": 300 },
        "max": { "type": "number", "minimum": 10, "maximum": 500 },
        "recommended": { "type": "number", "minimum": 10, "maximum": 300 }
      }
    },
    "external_ids": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_.-]+$": { "type": "string" }
      }
    },
    "links": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_.-]+$": { "type": "string", "format": "uri" }
      }
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "notes": { "type": "string" },
    "x_cura": {
      "type": "object",
      "description": "Cura-specific filament settings"
    },
    "x_prusaslicer": {
      "type": "object",
      "description": "PrusaSlicer-specific filament settings"
    },
    "x_orca": {
      "type": "object",
      "description": "OrcaSlicer-specific filament settings"
    },
    "x_bambu": {
      "type": "object",
      "description": "Bambu Studio/Printer-specific filament settings"
    }
  },
  "patternProperties": {
    "^x_[a-zA-Z0-9_.-]+$": {
      "type": "object",
      "description": "Vendor- or slicer-specific extensions."
    }
  },
  "additionalProperties": false
}
